#!/usr/bin/env bash


################################################################################
### Head: Note
##

## * https://github.com/samwhelp/skel-project-plan/blob/gh-pages/demo/sh/project/bin/install.sh

##
### Tail: Note
################################################################################


################################################################################
### Head: Init
##

THE_BASE_DIR_PATH="$(cd -- "$(dirname -- "$0")" ; pwd)"
THE_BASE_DIR_PATH="$THE_BASE_DIR_PATH/../ext"
source "$THE_BASE_DIR_PATH/init.sh"

##
### Tail: Init
################################################################################


################################################################################
### Head: Xsettings / xsettingsd
##

app_xsettingsd_start () {

	util_stop_all 'xsettingsd'

	if [ -f "$THE_STYLE_XSETTINGSD_CONFIG_FILE_PATH" ]; then
		is_command_exist 'xsettingsd' && xsettingsd -c "$THE_STYLE_XSETTINGSD_CONFIG_FILE_PATH" &
		return
	fi

	is_command_exist 'xsettingsd' && xsettingsd &

}


##
### Tail: Compositor / xsettingsd
################################################################################


################################################################################
### Head: Main
##

__main__ () {
	app_xsettingsd_start
}

__main__

##
### Tail: Main
################################################################################
